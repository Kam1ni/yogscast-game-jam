{
	"compilerOptions": {
		"outDir":"./dist/",
		"noImplicitAny": true,
		"sourceMap": true,
		"module":"commonjs",
		"target": "es2020",
		"baseUrl":"src",
		"paths":{
			"@/*":["*"]
		},
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"jsx": "react",
		"esModuleInterop": true
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.tsx"
	]
}